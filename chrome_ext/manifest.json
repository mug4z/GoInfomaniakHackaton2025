{
    "manifest_version": 3,
    "name": "Custom Extension",
    "version": "1.0",
    "description": "Ajoute du HTML et du JavaScript sur n'importe quelle page.",
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://mail.infomaniak.com/*",
        "https://ksuite.infomaniak.com/*",
        "https://calendar.infomaniak.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_width": 600,
        "default_height": 400,
        "default_title": "Clique pour injecter du contenu"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.infomaniak.com/*",
                "https://ksuite.infomaniak.com/*",
                "https://calendar.infomaniak.com/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}